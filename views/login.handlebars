<link rel="stylesheet" href="/css/login.css">

<main id="form-signin-container" class="text-center">
    <h1 class="h1 mb-3 fw-normal">Welcome to The Tech Blog</h1>
    <h2 class="h2 mb-3 fw-normal">Sign in or create an account</h2>
    <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="form-signin">
                        <form class="login-form">
                            <h1 class="h3 mb-3 fw-normal">Please Sign In</h1>

                            <div class="form-floating">
                                <input type="email" class="form-control" id="email-login"
                                    placeholder="name@example.com">
                                <label for="email-login">Email address</label>
                            </div>
                            <div class="form-floating">
                                <input type="password" class="form-control" id="password-login" placeholder="Password">
                                <label for="password-login">Password</label>
                            </div>

                            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign In</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="form-signin">
                        <form class="signup-form">
                            <h1 class="h3 mb-3 fw-normal">Create an Account</h1>
                            <div class="form-floating">
                                <input type="text" class="form-control" id="username-signup" placeholder="Username">
                                <label for="username-signup">Username</label>
                            </div>
                            <div class="form-floating">
                                <input type="email" class="form-control" id="email-signup"
                                    placeholder="name@example.com">
                                <label for="email-signup">Email address</label>
                            </div>
                            <div class="form-floating">
                                <input type="password" class="form-control" id="password-signup" placeholder="Password">
                                <label for="password-signup">Password</label>
                            </div>

                            <button class="w-100 btn btn-lg btn-primary" type="submit">Create Account</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="./js/login.js"></script>
