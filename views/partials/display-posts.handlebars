{{#if posts}}
    {{#each posts}}
        <div class="post">
            <h2>{{title}}</h2>
            <p>{{body}}</p>
        </div>
    {{/each}}
{{else}}
    <div class="alert alert-info">
        <h3>No posts found</h3>
        <p>There are no posts to display. Please check back later.</p>
    </div>
{{/if}}